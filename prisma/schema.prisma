generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int        @id @default(autoincrement())
  email           String     @unique
  name            String
  createdAt       DateTime   @default(now())
  lastQueryAt     DateTime?
  tokensRemaining Int        @default(2)
  tokensResetAt   DateTime?
  Googleapi       String?
  chats           Chat[]
  projects        Project[]

}

model Chat {
  id        String     @id @default(uuid())
  userId    Int
  title     String
  appUrl    String?
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  project   Project?
}




model Message {
  id        String   @id @default(uuid())
  chatId    String
  role      String
  content   String   @db.Text
  eventType String?
  toolCalls Json?
  createdAt DateTime @default(now())
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

enum ProjectState {
  INITIAL
  CREATIVE
  DEPLOYED
}

model Project {
  id                      String       @id @default(uuid())
  chatId                  String       @unique
  productName             String
  userId                  Int
  imageLink               String
  productDetails          String       @db.Text
  imageGenerationEntities String       @db.Text
  generatedimageLink      String?
  generatedCode           String?      @db.Text
  state                   ProjectState @default(INITIAL)
  deployedUrl             String?
  netlifySiteId           String?
  user                    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt               DateTime     @default(now())
  updatedAt               DateTime     @updatedAt
  chat                    Chat         @relation(fields: [chatId], references: [id], onDelete: Cascade)
  pageViews               PageView[]
}

model PageView {
  id          String   @id @default(uuid())
  projectId   String
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmContent  String?
  utmTerm     String?
  referrer    String?
  userAgent   String?
  createdAt   DateTime @default(now())
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
} 